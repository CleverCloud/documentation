          &lt;th style=&#34;text-align: left&#34;&gt;Record Type&lt;/th&gt;
          &lt;th style=&#34;text-align: left&#34;&gt;Value&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td style=&#34;text-align: left&#34;&gt;CNAME&lt;br&gt;Recommended&lt;/td&gt;
          &lt;td style=&#34;text-align: left&#34;&gt;&lt;code&gt;{yoursubdomain} 10800 IN CNAME domain.mtl.clever-cloud.com.&lt;/code&gt;&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td style=&#34;text-align: left&#34;&gt;A&lt;br&gt;Only if CNAME is not available&lt;/td&gt;
